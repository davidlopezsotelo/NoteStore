<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MenuPrincipalActivity">

    <TextView
        android:id="@+id/tv_menu_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU PRINCIPAL"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <Button
        android:id="@+id/button_salir3"
        android:layout_width="278dp"
        android:layout_height="65dp"
        android:backgroundTint="#E040FB"
        android:text="SALIR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_docs" />

    <Button
        android:id="@+id/btn_contactos"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="36dp"
        android:text="Contactos"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_notas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu_principal" />

    <Button
        android:id="@+id/btn_notas"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="28dp"
        android:text="NOTAS"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu_principal" />

    <Button
        android:id="@+id/btn_docs"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="36dp"
        android:text="Documentos"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_notas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_contactos" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="28dp"
        android:text="about"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_notas" />

</androidx.constraintlayout.widget.ConstraintLayout>